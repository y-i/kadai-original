<div class="row">
  <div class="col-xs-offset-3 col-xs-6 well bs-component">
      <%= form_for(@room, html: {class: 'form-horizontal'}) do |f| %>
        <%= field_set_tag('ルーム作成') do %>
          <div class="form-group label-floating">
            <div class="col-md-12">
              <%= f.label :comment, 'コメント', class: 'control-label' %>
              <%= f.text_field :comment, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="text-right">
            <%= f.submit '作成する', class: 'btn btn-success' %>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
<div class="row">
  <div class="col-xs-offset-3 col-xs-6 well">
    <%= form_for(:session, url: login_path, html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group label-floating">
        <div class="col-md-12">
          <%= f.label :email, 'メールアドレス', class: 'control-label' %>
          <%= f.email_field :email, class: 'form-control', required: true %>
        </div>
      </div>

      <div class="form-group label-floating">
        <div class="col-md-12">
          <%= f.label :password, 'パスワード', class: 'control-label' %>
          <%= f.password_field :password, class: 'form-control', required: true %>
        </div>
      </div>

      <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
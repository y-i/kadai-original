<div class="row">
  <div class="col-sm-offset-1 col-sm-3" style="font-size: large; font-weight: bold;">
    User list
  </div>
  <% @users.each do |user| %>
    <div class="well col-xs-12 col-sm-offset-1 col-sm-10">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(user, {size: 50}) %>" alt="gravater" />
        </div>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
    </div>
  <% end %>
</div>
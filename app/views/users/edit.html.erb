<div class="row">
  <div class="col-xs-offset-3 col-xs-6 well bs-component">
      <%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
        <%= field_set_tag('User info edit') do %>
          <div class="form-group label-floating">
            <div class="col-md-12">
              <%= f.label :name, 'お名前', class: 'control-label' %>
              <%= f.text_field :name, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="form-group label-floating">
            <div class="col-md-12">
              <%= f.label :nickname, 'ニックネーム', class: 'control-label' %>
              <%= f.text_field :nickname, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group label-floating">
            <div class="col-md-12">
              <%= f.label :email, 'メールアドレス', class: 'control-label' %>
              <%= f.email_field :email, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="text-right">
            <%= f.submit 'Update', class: 'btn btn-success' %>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
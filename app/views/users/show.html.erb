<div class="user-profile">
  <div class="row">
    <div class="col-sm-offset-1 col-sm-3 col-md-offset-2 col-md-3 col-lg-offset-3 col-lg-3" style="font-size: large; font-weight: bold;">
      User info
    </div>
    <div class="col-sm-offset-4 col-sm-3 col-md-offset-2 col-md-3 col-lg-offset-0 col-lg-3" style="text-align: right;">
      <%= link_to 'Edit',edit_user_path(current_user), class: 'btn btn-info btn-raised' %>
    </div>
  </div>
  <div class="icon text-center">
    <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
  </div>
</div>